<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/diamond_root"
    >

    <ImageView
        android:id="@+id/line_purple_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1.8:1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_badges_diamond_all_bk_purple_1" />

    <ImageView
        android:id="@+id/white_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="5:4"
        app:layout_constraintEnd_toEndOf="@+id/line_purple_background"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_badges_diamond_bk_purple"
        app:tint="@color/mainBackground" />

    <ImageView
        android:id="@+id/purple_diamond"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:scaleY="0.78"
        android:scaleX="0.78"
        app:layout_constraintBottom_toBottomOf="@id/white_background"
        app:layout_constraintEnd_toEndOf="@id/white_background"
        app:layout_constraintStart_toStartOf="@id/white_background"
        app:layout_constraintTop_toTopOf="@id/white_background"
        app:srcCompat="@drawable/ic_business_diamond"
        app:tint="@color/colorVioletPlayPodText" />
    <ImageView
        android:id="@+id/white_purple_diamond"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:scaleY="0.78"
        android:scaleX="0.78"
        app:layout_constraintBottom_toBottomOf="@id/white_background"
        app:layout_constraintEnd_toEndOf="@id/white_background"
        app:layout_constraintStart_toStartOf="@id/white_background"
        app:layout_constraintTop_toTopOf="@id/white_background"
        app:srcCompat="@drawable/ic_business_diamond"
         />

</androidx.constraintlayout.widget.ConstraintLayout>